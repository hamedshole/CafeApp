@using Microsoft.JSInterop
@inject IJSRuntime _js;

<div class="items" id="category1">
    <h3>@Category.Title</h3>
    <ul>
        @foreach (var item in Category.Items)
        {
            <li id="item-@item.Id" @oncontextmenu="()=>Minus(item)" @onclick="()=>Add(item)">
                @item.Title
                <span class="count" style="display: @GetItemDisplay(item.Amount);">@item.Amount</span>
            </li>
        }
    </ul>
</div>