
@page "/dashboard/products"
@using CafeApp.Business.Helpers.Dtos
@layout AdminLayout
@inject IApplicationUnit _unit
@inject NavigationManager _navigation;
<MudIconButton OnClick=GoToCreatePAge Icon="@Icons.Material.Filled.Add" Title="جدید">افزودن</MudIconButton>

<MudPaper Style="margin:10px" Elevation="2">
    <MudDataGrid @ref="_dataGrid" Striped=true ServerData=LoadData T="ProductDto">

        <Columns>

            <PropertyColumn Title="عنوان" Property="x=>x.Title"></PropertyColumn>
            <TemplateColumn>
                <CellTemplate>
                    <MudStack Row>
                        <MudAvatar>
                            <MudImage Src=@string.Format("{0},{1}","data:image/png;base64",context.Item.Image)></MudImage>
                        </MudAvatar>
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Title="دسته" Property="x=>x.Category"></PropertyColumn>
            <PropertyColumn Title="قیمت" Property="x=>x.Price"></PropertyColumn>
            <TemplateColumn>
                <CellTemplate>
                    <MudStack Row>
                        <MudIcon title="جدید" Icon=@GetNewIcon(context.Item.IsNew)></MudIcon>
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
            <TemplateColumn Title="وضعیت">
                <CellTemplate>
                    <MudStack Row>
                        <MudCheckBox ReadOnly=true UnCheckedColor=Color.Error Color=Color.Success Value="context.Item.IsActive"></MudCheckBox>
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Title="توضیحات" Property="x=>x.Description"></PropertyColumn>
            <TemplateColumn CellClass="d-flex justify-end">
                <CellTemplate>
                    <MudStack Row>

                        <MudIconButton OnClick="()=>Edit(context.Item.Id)" Icon="@Icons.Material.Filled.Edit" />
                        <MudIconButton OnClick="()=>Delete(context.Item.Id)" Icon="@Icons.Material.Filled.Delete" />
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
       
    </MudDataGrid>
</MudPaper>

@code {
    private MudDataGrid<ProductDto> _dataGrid;
    private int rowNumber;
    private bool _detailPanel = false;
   

    private string IsActiveString(bool isActive)
    {
        if (isActive)
            return "فعال";
        else
            return "غیرفعال";
    }
    public void GoToCreatePAge()
    {
        _navigation.NavigateTo("/dashboard/products/new");
    }
    public void Edit(Guid id)
    {
        _navigation.NavigateTo("/dashboard/products/" + id);

    }


}