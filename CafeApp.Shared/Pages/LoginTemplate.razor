@layout EmptyLayout
<div class="mainbody">
    <div class="login-container">
        <!-- اضافه کردن لوگو -->
    <img src="_content/CafeApp.Shared/images/logo.png" alt="لوگو" class="logo">

        <div class="login-box">
            <h2>پنل مدیریتی کافه لاین</h2>
            <form action="/login" method="post">
                <div class="input-container">
                    <input type="text" id="username" placeholder="نام کاربری">
                </div>
                <div class="input-container">
                    <input type="password" id="password" placeholder="رمز عبور">
                </div>
                <button class="btn btn-success btn-lg col-md-8 col-12">ورود</button>
            </form>
        </div>
    </div>

</div>